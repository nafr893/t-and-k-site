{%- comment -%}
  Optional helper snippet (kept simple) â€” the section already renders slideshow-slide directly,
  but include this snippet if you want a small isolated slide renderer later.
{%- endcomment -%}

{%- capture preview_image -%}
  {% if block.settings.image %}
    {{ block.settings.image | image_url: width: 2000 | image_tag: class: 'simple-slideshow__image', alt: block.settings.image_alt }}
  {% endif %}
{%- endcapture -%}

<article class="simple-slideshow__slide" {{ block.shopify_attributes }}>
  <div class="simple-slideshow__media">
    {{ preview_image }}
  </div>

  {% if block.settings.caption != blank %}
    <div class="simple-slideshow__caption">
      <div class="simple-slideshow__caption-inner">
        {{ block.settings.caption }}
      </div>
    </div>
  {% endif %}
</article>