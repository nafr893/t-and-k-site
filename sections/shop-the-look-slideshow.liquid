{% liquid
  assign slide_count = section.blocks.size

  assign show_arrows = true
  if section.settings.icons_style == 'none' or slide_count <= 1
    assign show_arrows = false
  endif

  assign autoplay = section.settings.autoplay

  assign section_width_class = 'section--' | append: section.settings.section_width

  assign slideshow_class = 'stl-slideshow'
  if slide_count == 1
    assign slideshow_class = slideshow_class | append: ' stl-slideshow--single-slide'
  endif
%}

{% if slide_count > 1 %}
  {% capture controls %}
    {%- render 'slideshow-controls',
      style: section.settings.pagination_style,
      autoplay: autoplay,
      item_count: slide_count,
      show_arrows: false,
      arrows_on_media: true,
      controls_on_media: true,
      pagination_position: 'center',
      icon_style: section.settings.icons_style
    -%}
  {% endcapture %}
{% endif %}

{% capture slides %}
  {% content_for 'blocks' %}
{% endcapture %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="shop-the-look-section spacing-style section {{ section_width_class }} color-{{ section.settings.color_scheme }}"
  style="
    {% render 'spacing-style', settings: section.settings %}
    --stl-corner-radius: {{ section.settings.corner_radius | default: 0 }}px;
    --hotspot-size: 36px;
    --stl-card-width: 320px;
    --stl-card-offset: 5%;
  "
>
  {% render 'slideshow',
    class: slideshow_class,
    controls: controls,
    show_arrows: show_arrows,
    icon_style: section.settings.icons_style,
    icon_shape: section.settings.icons_shape,
    autoplay: autoplay,
    autoplay_speed: section.settings.autoplay_speed,
    slides: slides,
    slide_count: slide_count,
    slide_size: section.settings.slide_height
  %}
</div>

{% stylesheet %}
  .shop-the-look-section {
    position: relative;
  }

  .shop-the-look-section .stl-slideshow {
    border-radius: var(--stl-corner-radius, 0);
    overflow: hidden;
  }

  /* Image container - like existing slide__image-container */
  .stl-slide__image-container {
    display: flex;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
  }

  .stl-slide__image-container > .stl-slide__image {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
  }

  /* Hotspot marker */
  .stl-hotspot {
    position: absolute;
    width: var(--hotspot-size);
    height: var(--hotspot-size);
    background: var(--hotspot-bg, rgb(255 255 255 / 0.35));
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: var(--layer-flat, 1);
    padding: 0;
    transform: translate(-50%, -50%);
    transition: transform 0.2s ease;
  }

  .stl-hotspot:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  /* Hotspot bullseye */
  .stl-hotspot::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: calc(var(--hotspot-size) * 0.4);
    height: calc(var(--hotspot-size) * 0.4);
    background: var(--hotspot-bullseye, #fff);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.15s ease, height 0.15s ease;
  }

  .stl-hotspot:hover::after {
    width: calc(var(--hotspot-size) * 0.5);
    height: calc(var(--hotspot-size) * 0.5);
  }

  /* Pulse animation */
  @keyframes stl-hotspot-pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 var(--hotspot-bg, rgb(255 255 255 / 0.35));
    }
    50% {
      box-shadow: 0 0 0 10px rgb(255 255 255 / 0);
    }
  }

  .stl-hotspot--pulse {
    animation: stl-hotspot-pulse 2s ease-in-out infinite;
  }

  /* Hide hotspot on mobile */
  @media screen and (max-width: 749px) {
    .stl-hotspot {
      display: none;
    }
  }

  /* Card wrapper positioning */
  .stl-card-wrapper {
    position: absolute;
    top: var(--card-vertical, 50%);
    transform: translateY(-50%);
    width: var(--stl-card-width, 320px);
    max-width: calc(100% - var(--stl-card-offset) * 2 - var(--padding-md, 16px));
    z-index: var(--layer-raised, 2);
  }

  .stl-card-wrapper--left {
    left: var(--stl-card-offset, 5%);
  }

  .stl-card-wrapper--right {
    right: var(--stl-card-offset, 5%);
  }

  /* Mobile: Stack layout */
  @media screen and (max-width: 749px) {
    .shop-the-look-section .stl-slide {
      display: flex;
      flex-direction: column;
      min-height: auto;
    }

    .stl-slide__image-container {
      position: relative;
      aspect-ratio: 16 / 9;
      width: 100%;
      height: auto;
    }

    .stl-card-wrapper {
      position: relative;
      top: auto;
      left: auto;
      right: auto;
      transform: none;
      width: 100%;
      max-width: 100%;
      padding: var(--padding-md, 16px);
    }

    .stl-card-wrapper .stl-card {
      border-radius: 0;
      box-shadow: none;
    }
  }

  /* Arrow positioning override for right-side square arrows */
  .shop-the-look-section slideshow-arrows {
    position: absolute;
    right: var(--padding-lg, 24px);
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm, 12px);
    z-index: var(--layer-raised, 2);
  }

  .shop-the-look-section slideshow-arrows .slideshow-control {
    background: var(--color-background, #fff);
    border: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-15, 0.15));
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color var(--animation-speed, 0.2s) ease,
                color var(--animation-speed, 0.2s) ease;
  }

  .shop-the-look-section slideshow-arrows .slideshow-control:hover {
    background: var(--color-foreground);
    color: var(--color-background);
  }

  /* Mobile arrows: horizontal, at bottom of image */
  @media screen and (max-width: 749px) {
    .shop-the-look-section slideshow-arrows {
      top: auto;
      bottom: var(--padding-md, 16px);
      right: 50%;
      transform: translateX(50%);
      flex-direction: row;
    }

    .shop-the-look-section slideshow-arrows .slideshow-control {
      width: 40px;
      height: 40px;
    }
  }
{% endstylesheet %}

