{% liquid
  assign slide_count = section.blocks.size
  assign show_arrows = false
  if slide_count > 1
    assign show_arrows = true
  endif

  assign slide_height_class = ''
  case section.settings.slide_height
    when 'small'
      assign slide_height_class = 'stl-slideshow--small'
    when 'medium'
      assign slide_height_class = 'stl-slideshow--medium'
    when 'large'
      assign slide_height_class = 'stl-slideshow--large'
  endcase
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    shop-the-look-slideshow
    {{ slide_height_class }}
    color-{{ section.settings.color_scheme }}
    spacing-style
  "
  data-testid="shop-the-look-slideshow"
  style="
    {% render 'spacing-style', settings: section.settings %}
    --stl-corner-radius: {{ section.settings.corner_radius | default: 0 }}px;
    --hotspot-size: 36px;
    --stl-card-width: 320px;
    --stl-card-offset: 5%;
  "
>
  {% capture slides %}
    {% for block in section.blocks %}
      {% render 'slideshow-slide',
        index: forloop.index0,
        slide_id: block.id,
        class: 'stl-slide',
        slide_size: section.settings.slide_height
      %}
        {% render block %}
    
    {% endfor %}
  {% endcapture %}

  {% capture custom_arrows %}
    {% if show_arrows %}
      <slideshow-arrows class="stl-arrows" position="right">
        {% render 'slideshow-arrow',
          action: 'previous',
          icon_style: section.settings.arrow_style,
          icon_shape: 'square'
        %}
        {% render 'slideshow-arrow',
          action: 'next',
          icon_style: section.settings.arrow_style,
          icon_shape: 'square'
        %}
      </slideshow-arrows>
    {% endif %}
  {% endcapture %}

  {% render 'slideshow',
    slides: slides,
    slide_count: slide_count,
    autoplay: section.settings.autoplay,
    autoplay_speed: section.settings.autoplay_speed,
    slideshow_arrows: custom_arrows,
    show_arrows: false,
    infinite: true,
    class: 'stl-slideshow-component',
    slide_size: section.settings.slide_height
  %}
</div>

{% stylesheet %}
  /* Section layout */
  .shop-the-look-slideshow {
    position: relative;
  }

  .shop-the-look-slideshow .stl-slideshow-component {
    position: relative;
    border-radius: var(--stl-corner-radius, 0);
    overflow: hidden;
  }

  /* Slide heights */
  .stl-slideshow--small .stl-slide {
    --slide-min-height: 20rem;
    --slide-min-height-desktop: 26rem;
  }

  .stl-slideshow--medium .stl-slide {
    --slide-min-height: 24rem;
    --slide-min-height-desktop: 35rem;
  }

  .stl-slideshow--large .stl-slide {
    --slide-min-height: 28rem;
    --slide-min-height-desktop: 45rem;
  }

  /* Slide */
  .stl-slide {
    position: relative;
    min-height: var(--slide-min-height, 24rem);
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    .stl-slide {
      min-height: var(--slide-min-height-desktop, 35rem);
    }
  }

  .stl-slide__content {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: inherit;
  }

  /* Background wrapper */
  .stl-slide__background-wrapper {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .stl-slide__background {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .stl-slide__placeholder {
    background: rgb(var(--color-foreground-rgb) / var(--opacity-10));
  }

  /* Hotspot marker */
  .stl-hotspot {
    position: absolute;
    width: var(--hotspot-size);
    height: var(--hotspot-size);
    background: var(--hotspot-bg, rgb(255 255 255 / 0.35));
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: var(--layer-flat, 1);
    padding: 0;
    transition: transform 0.2s ease;
  }

  .stl-hotspot:hover {
    transform: scale(1.1);
  }

  /* Hotspot bullseye */
  .stl-hotspot::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: calc(var(--hotspot-size) * 0.4);
    height: calc(var(--hotspot-size) * 0.4);
    background: var(--hotspot-bullseye, #fff);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.15s ease, height 0.15s ease;
  }

  .stl-hotspot:hover::after {
    width: calc(var(--hotspot-size) * 0.5);
    height: calc(var(--hotspot-size) * 0.5);
  }

  /* Pulse animation */
  @keyframes stl-hotspot-pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 var(--hotspot-bg, rgb(255 255 255 / 0.35));
    }
    50% {
      box-shadow: 0 0 0 10px rgb(255 255 255 / 0);
    }
  }

  .stl-hotspot--pulse {
    animation: stl-hotspot-pulse 2s ease-in-out infinite;
  }

  /* Hide hotspot on mobile */
  @media screen and (max-width: 749px) {
    .stl-hotspot {
      display: none;
    }
  }

  /* Card wrapper positioning */
  .stl-card-wrapper {
    position: absolute;
    top: var(--card-vertical, 50%);
    transform: translateY(-50%);
    width: var(--stl-card-width, 320px);
    max-width: calc(100% - var(--stl-card-offset) * 2 - var(--padding-md, 16px));
    z-index: var(--layer-raised, 2);
  }

  .stl-card-wrapper--left {
    left: var(--stl-card-offset, 5%);
  }

  .stl-card-wrapper--right {
    right: var(--stl-card-offset, 5%);
  }

  /* Mobile: Stack layout */
  @media screen and (max-width: 749px) {
    .stl-slide {
      display: flex;
      flex-direction: column;
      min-height: auto;
    }

    .stl-slide__content {
      display: flex;
      flex-direction: column;
      min-height: auto;
    }

    .stl-slide__background-wrapper {
      position: relative;
      aspect-ratio: 16 / 9;
      width: 100%;
      height: auto;
    }

    .stl-card-wrapper {
      position: relative;
      top: auto;
      left: auto;
      right: auto;
      transform: none;
      width: 100%;
      max-width: 100%;
      padding: var(--padding-md, 16px);
    }

    .stl-card-wrapper .stl-card {
      border-radius: 0;
      box-shadow: none;
    }
  }

  /* Arrow controls - positioned right, vertical stack */
  .stl-arrows {
    position: absolute !important;
    right: var(--padding-lg, 24px);
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm, 12px);
    z-index: var(--layer-raised, 2);
  }

  .stl-arrows .slideshow-control {
    background: var(--color-background, #fff);
    border: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-15, 0.15));
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color var(--animation-speed, 0.2s) ease,
                color var(--animation-speed, 0.2s) ease;
  }

  .stl-arrows .slideshow-control:hover {
    background: var(--color-foreground);
    color: var(--color-background);
  }

  .stl-arrows .slideshow-control--shape-square {
    border-radius: var(--border-radius-sm, 4px);
  }

  /* Mobile arrows: horizontal, bottom center */
  @media screen and (max-width: 749px) {
    .stl-arrows {
      top: auto;
      bottom: var(--padding-md, 16px);
      right: 50%;
      transform: translateX(50%);
      flex-direction: row;
    }

    .stl-arrows .slideshow-control {
      width: 40px;
      height: 40px;
    }
  }

  /* Hide arrows when only 1 slide */
  .shop-the-look-slideshow:has(slideshow-slides > :only-child) .stl-arrows {
    display: none;
  }
{% endstylesheet %}

