{% liquid
  assign slide_product = block.settings.product
  assign background_image = block.settings.background_image
  assign card_position = block.settings.card_position | default: 'right'
  assign hotspot_x = block.settings.hotspot_x | default: 50
  assign hotspot_y = block.settings.hotspot_y | default: 50
  assign card_vertical = block.settings.card_vertical_position | default: 50
%}

<div
  class="stl-slide__content"
  style="
    --hotspot-x: {{ hotspot_x }}%;
    --hotspot-y: {{ hotspot_y }}%;
    --card-vertical: {{ card_vertical }}%;
  "
  {{ block.shopify_attributes }}
>
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="stl-slide__background-wrapper">
    {% if background_image != blank %}
      {% render 'image', image: background_image, class: 'stl-slide__background' %}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'stl-slide__background stl-slide__placeholder' }}
    {% endif %}

    {%- comment -%} Optional Overlay {%- endcomment -%}
    {% if block.settings.toggle_overlay %}
      {% render 'overlay', settings: block.settings, layer: 'var(--layer-flat)' %}
    {% endif %}

    {%- comment -%} Hotspot Marker {%- endcomment -%}
    {% if slide_product != blank %}
      <button
        class="stl-hotspot {% if section.settings.hotspot_pulse %}stl-hotspot--pulse{% endif %}"
        style="
          left: calc(var(--hotspot-x) - var(--hotspot-size) / 2);
          top: calc(var(--hotspot-y) - var(--hotspot-size) / 2);
          --hotspot-bg: {{ section.settings.hotspot_color | default: '#FFFFFF57' }};
          --hotspot-bullseye: {{ section.settings.hotspot_bullseye_color | default: '#ffffff' }};
        "
        aria-label="{{ 'accessibility.view_product' | t }}: {{ slide_product.title | escape }}"
        type="button"
      ></button>
    {% endif %}
  </div>

  {%- comment -%} Product Card {%- endcomment -%}
  {% if slide_product != blank %}
    <div class="stl-card-wrapper stl-card-wrapper--{{ card_position }}">
      {% render 'shop-the-look-card',
        product: slide_product,
        position: card_position,
        color_scheme: section.settings.card_color_scheme,
        section_id: section.id,
        block: block
      %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Shop the look slide",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:settings.background_image"
    },
    {
      "type": "product",
      "id": "product",
      "label": "t:settings.product"
    },
    {
      "type": "header",
      "content": "Card position"
    },
    {
      "type": "select",
      "id": "card_position",
      "label": "Card position",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "right"
    },
    {
      "type": "range",
      "id": "card_vertical_position",
      "label": "Card vertical position",
      "min": 10,
      "max": 90,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "Hotspot position"
    },
    {
      "type": "range",
      "id": "hotspot_x",
      "label": "t:settings.x_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50
    },
    {
      "type": "range",
      "id": "hotspot_y",
      "label": "t:settings.y_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50
    },
    {
      "type": "header",
      "content": "t:content.media_overlay"
    },
    {
      "type": "checkbox",
      "id": "toggle_overlay",
      "label": "t:settings.media_overlay",
      "default": false
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "t:settings.overlay_color",
      "alpha": true,
      "default": "#00000026",
      "visible_if": "{{ block.settings.toggle_overlay }}"
    },
    {
      "type": "select",
      "id": "overlay_style",
      "label": "t:settings.overlay_style",
      "options": [
        {
          "value": "solid",
          "label": "t:options.solid"
        },
        {
          "value": "gradient",
          "label": "t:options.gradient"
        }
      ],
      "default": "solid",
      "visible_if": "{{ block.settings.toggle_overlay }}"
    }
  ],
  "presets": [
    {
      "name": "Shop the look slide"
    }
  ]
}
{% endschema %}
